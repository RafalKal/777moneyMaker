<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/transactionName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Nazwa"
        android:textSize="32sp">
    </TextView>

    <TextView
        android:id="@+id/transactionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wartość"
        android:textSize="32sp">
    </TextView>

        <TextView
            android:id="@+id/transactionValueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" PLN"
            android:textSize="32sp">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/transactionCategoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kategoria: "
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/transactionCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kategoria"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/transactionDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     data: "
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/transactionDateDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/transactionDateMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/transactionDateYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/transactionID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="1sp"
            android:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/transactionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="1sp"
            android:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/transactionAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="1sp"
            android:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/transactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="1sp"
            android:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/transactionDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="1sp"
            android:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/transactionMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="1sp"
            android:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/transactionYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="1sp"
            android:visibility="invisible">
        </TextView>

    </LinearLayout>

</LinearLayout>